<launch>
  <!-- Define arguments -->
  <arg name="odom_frame_id" default="odom"/>
  <arg name="base_frame_id" default="base_footprint"/>
  <arg name="global_frame_id" default="map"/>
  <arg name="odom_topic" default="odom"/>
  <arg name="laser_topic" default="scan"/>

  <!-- Move Base Node -->
  <node pkg="move_base" type="move_base" name="move_base" respawn="true" output="screen">
    <!-- Load parameters from YAML files -->
    <rosparam file="$(find navigation)/params/costmap_common_params.yaml" command="load" ns="global_costmap"/>
    <rosparam file="$(find navigation)/params/costmap_common_params.yaml" command="load" ns="local_costmap"/>
    <rosparam file="$(find navigation)/params/local_costmap_params.yaml" command="load"/>
    <rosparam file="$(find navigation)/params/global_costmap_params.yaml" command="load"/>
    <rosparam file="$(find navigation)/params/dwa_local_planner_params.yaml" command="load"/>
    <rosparam file="$(find navigation)/params/move_base_params.yaml" command="load"/>
    <rosparam file="$(find navigation)/params/global_planner_params.yaml" command="load"/>
    <rosparam file="$(find navigation)/params/navfn_global_planner_params.yaml" command="load"/>
    <rosparam file="$(find navigation)/params/controllers.yaml" command="load"/>
    <rosparam file="$(find navigation)/params/joint_limits.yaml" command="load"/>
    
    <!-- Override parameters -->
    <param name="global_costmap/global_frame" value="$(arg global_frame_id)"/>
    <param name="global_costmap/robot_base_frame" value="$(arg base_frame_id)"/>
    <param name="local_costmap/global_frame" value="$(arg odom_frame_id)"/>
    <param name="local_costmap/robot_base_frame" value="$(arg base_frame_id)"/>
    <param name="DWAPlannerROS/global_frame_id" value="$(arg odom_frame_id)"/>

    <!-- Remap topics -->
    <remap from="odom" to="$(arg odom_topic)"/>
    <remap from="scan" to="$(arg laser_topic)"/>
    <remap from="cmd_vel" to="/mobile_base/commands/velocity"/>
  </node>
</launch>
